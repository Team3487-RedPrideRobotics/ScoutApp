<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_margin="16dp">

        <LinearLayout
            android:layout_width="358dp"
            android:layout_height="129dp"
            android:layout_marginStart="10dp"
            android:layout_marginTop="10dp"
            android:layout_marginEnd="10dp"
            android:layout_marginBottom="10dp"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/teamName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="3487"
                android:textColor="@color/black"
                android:textSize="26dp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/totalPoints"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="2dp"
                android:text="Total Points" />

            <TextView
                android:id="@+id/LowPoints"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="2dp"
                android:text="Low Goal" />

            <TextView
                android:id="@+id/HighPoints"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="2dp"
                android:text="High Goal" />

            <TextView
                android:id="@+id/climbPoints"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="2dp"
                android:text="Climb Points" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/editTotal"
                android:layout_marginStart="-280dp"
                android:layout_marginTop="50dp"
                android:layout_marginEnd=""
                android:layout_marginBottom=""
                android:padding="15dp"
                android:text="20"
                android:textSize="26dp" />

            <TextView
                android:id="@+id/editLow"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="20dp"
                android:layout_marginTop="50dp"
                android:layout_marginEnd=""
                android:layout_marginBottom=""
                android:padding="15dp"
                android:text="5"
                android:textSize="26dp" />
            <TextView
                android:id="@+id/editHigh"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="20dp"
                android:layout_marginTop="50dp"
                android:layout_marginEnd=""
                android:layout_marginBottom=""
                android:padding="15dp"
                android:text="5"
                android:textSize="26dp" />
            <TextView
                android:id="@+id/editClimb"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="20dp"
                android:layout_marginTop="50dp"
                android:layout_marginEnd=""
                android:layout_marginBottom=""
                android:padding="15dp"
                android:text="5"
                android:textSize="26dp" />

        </LinearLayout>

    </RelativeLayout>

</LinearLayout>